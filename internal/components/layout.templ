package components

templ RootLayout() {
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Github Repository Search</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        { children... }
    </body>
    </html>
}

templ LoginPage(contents templ.Component) {
    @RootLayout() {
        <div class="w-full p-4">
            <main role="main" class="w-full flex flex-col h-screen content-center justify-center">
                <div class="w-1/2 sm:w-1/2 lg:w-1/3 bg-gray-50 rounded-xl m-auto">
                    <div class="bg-white rounded shadow px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        @contents
                    </div>
                </div>
            </main>
        </div>
    }
}

type ProfileData struct {
    Username string `json:"login"`
    Id string `json:"id"` 
    AvatarURL string `json:"avatar_url"`
    Company string `json:"company"`
    Repos int `json:"public_repos"`
    Gists int `json:"public_gists"`
    Followers int `json:"followers"`
    Following int `json:"following"`
}

templ ProfilePage(data ProfileData) {
